<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.proyectofinal.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.proyectofinal.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@+id/shoppingFragment"
        android:name="com.example.proyectofinal.ShoppingFragment"
        android:label="ShoppingFragment"
        tools:layout="@layout/fragment_shopping" />

    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.proyectofinal.ShopFragment"
        android:label="ShopFragment"
        tools:layout="@layout/fragment_shop" />

</navigation>
